@{
}
@model DemoAspNet.Models.Product
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div class="card mb-2 p-5">
	<div class="card-body">
		<div class="container">
			<div class="row">
				<div class="row">
					<div class="col">
						<img width="100" src="@Model.URLimg">
					</div>
					<form asp-action="EditProductProduct">
						<div class="container p-3">
							<div class="row">
								<div class="col">
									<b><i class="bi bi-product-fill"></i> Titre :</b> <input asp-for="Title" type="text" class="form-control" placeholder="@Model.Title ..." /> <br />
									@*<b><i class="bi bi-product-fill"></i> Id:*@</b> <input asp-for="Id" type="hidden" class="form-control" value="@Model.Id" /> <br />
									<b><i class="bi bi-pencil-fill"></i> Prix :</b>  <input asp-for="Prix" type="number" class="form-control" min="0" placeholder="@Model.Prix ..." /> <br />
									<b><i class="bi bi-pencil-fill"></i> Quantité disponible :</b>  <input asp-for="Nbr" type="number" class="form-control" min="0" placeholder="@Model.Nbr " /> <br />

								</div>
								<button type="submit" class="btn btn-danger p-1 mb-1"><i class="bi bi-cart"></i>Sauvegarder</button>
							</div>
						</div>
					</form>


					<a class="btn btn-danger" href="~/home/RemoveProductSeller/@Model.Id" role="button">Supprimer</a>

				</div>
			</div>
		</div>
	</div>
</div>