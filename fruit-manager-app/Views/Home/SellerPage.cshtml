@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_SellerPage";
    ViewBag.Title = ViewBag.Title;

}

@model DemoAspNet.Models.Product;
@using DemoAspNet.Controllers;
@using DemoAspNet.Models;
<h1 class="pb-3">Gestion des produits</h1>


<form asp-action="AddProduct">
    <div class="container">
        <div class="row p-4">
            <div class="col"><input asp-for="Title" type="text" class="form-control" placeholder="Titre ..." /></div>
            <div class="col"><input asp-for="Categorie" type="text" class="form-control" placeholder="Categorie ..." /></div>
            <div class="col"><input asp-for="Pour" type="text" class="form-control" placeholder="Pour ..." /></div>
@*            <div class="col"><input asp-for="Vendeur" type="text" class="form-control" placeholder="Nom de vendeur ..."  /></div>
*@            <div class="col"><input asp-for="Prix" type="number" min="0" class="form-control" placeholder="Prix ..." /></div>
            <div class="col"><input asp-for="Description" type="text" class="form-control" placeholder="Casual?Sports? ..." /></div>
            <div class="col"><input asp-for="URLimg" type="text" class="form-control" placeholder="URL image ..." /></div>
            <div class="col"><input asp-for="Nbr" type="number" min="1" class="form-control" placeholder="Quantité ..." /></div>
@*            <div class="col"><input asp-for="SellerId" type="number" min="1"  class="form-control" value="" /></div>
*@        </div>
        <div class="input-group-prepend p-4">
            <div class="col">
                <div class="col"><button type="submit" class="btn btn-success w-100"><i class="bi bi-search"></i> Ajouter</button></div>
            </div>
        </div>
    </div>
</form>
<hr />
<div class="row">
    @foreach (DemoAspNet.Models.Product product in ViewBag.Products)
    {
        <div class="col">
            <partial name="_VProduit" model="product" />
        </div>
    }
</div>

