@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_SellerPage";
    ViewBag.Title = ViewBag.Title;

}

@model DemoAspNet.Models.Product;
@using DemoAspNet.Controllers;
@using DemoAspNet.Models;
<h1 class="pb-3">Gestion des produits</h1>
@if (TempData["AlertMessage"] != null)
{
    <script>
        alert('@TempData["AlertMessage"]');
    </script>
}

<form asp-action="AddProduct">
    <div class="container">
        <div class="row p-4">
            <div class="col"><input asp-for="Title" type="text" class="form-control" placeholder="Titre ..." required /></div>
            <div class="col"><input asp-for="Categorie" type="text" class="form-control" placeholder="Categorie ..." required /></div>
            <div class="col"><input asp-for="Pour" type="text" class="form-control" placeholder="Pour ..." required /></div>
          <div class="col"><input asp-for="Prix" type="number" min="0" class="form-control" placeholder="Prix ..." required /></div>
            <div class="col"><input asp-for="Description" type="text" class="form-control" placeholder="Casual?Sports? ..." required /></div>
            <div class="col"><input asp-for="URLimg" type="text" class="form-control" placeholder="URL image ..." required /></div>
            <div class="col"><input asp-for="Nbr" type="number" min="1" class="form-control" placeholder="Quantité ..." required /></div>
        </div>
        <div class="input-group-prepend p-4">
            <div class="col">
                <div class="col"><button type="submit" class="btn btn-success w-100"><i class="bi bi-search"></i> Ajouter</button></div>
            </div>
        </div>
    </div>
</form>
<hr />
<div class="row">
    @foreach (DemoAspNet.Models.Product product in ViewBag.Products)
    {
        <div class="col">
            <partial name="_VProduit" model="product" />
        </div>
    }
</div>

