@{
	Layout = "_Layout";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@using DemoAspNet.Models;

@model Seller;

<h1 class="pb-3">Vendeur - connexion</h1>
			<form method="POST" asp-action="SellerPage">

				<div class="form-group row">
					<div class="col">
							<select asp-for="Id" class="form-select form-select-lg mb-3">
							<option value="">Choisir ...</option>
							@foreach (Seller seller in ViewBag.Sellers)
							{
								<option value="@seller.Id">@seller.Nom</option>
							}
						</select>
							@foreach (Seller seller in ViewBag.Sellers)
							{
								<input asp-for="Nom" type="hidden" value="@seller.Nom">
							}
						</div>
				</div>
				<div class="col">
		              <button type="submit" class="btn btn-success btn-block  w-100 p-3">
			Se connecter
					</button>
		<div class="form-group row">
			<div class="col">
				<span asp-validation-for="Id" class="text-danger"></span>
			</div>
		</div>
				</div>
			</form>


<div class="input-group-prepend">
	<a href="~/Home/Addseller" class="btn btn-outline-secondary w-100 p-3" role="button"><i class="bi bi-box-arrow-left"></i>Créer un nouveau compte</a>
</div>
<div class="input-group-prepend">
	<a href="~/Home/clientlogin" class="btn btn-outline-secondary w-100 p-3" role="button"><i class="bi bi-box-arrow-left"></i> Aller a l'interface client</a>
</div>





