@{
    Layout = "_Layout";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model DemoAspNet.Models.Seller

<h1 class="pb-3">Vendeur - Nouveau profil</h1>

<form asp-action="AddSeller">
    <div class="form-group">
        <label class="form-label" asp-for="Nom">Nom</label>
        <input class="form-control" type="text" asp-for="Nom" />
        <span asp-validation-for="Nom" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="form-label" asp-for="Prenom">Prénom</label>
        <input class="form-control" type="text" asp-for="Prenom" />
        <span asp-validation-for="Prenom" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="form-label" asp-for="Id">Identifiant</label>
        <input class="form-control" type="text" asp-for="Id" />
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3 w-100">Creation</button>
</form>

