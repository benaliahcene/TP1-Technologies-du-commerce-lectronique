@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_SellerPage";
}

@model DemoAspNet.Models.Seller

<h1 class="pb-3">Vendeur - Modifier informations</h1>


<form asp-action="EditProfilVendeur">
    <div class="container p-5">
        <div class="row">
            <div class="col"><input asp-for="Nom" type="text" class="form-control" placeholder="Nom ..." /></div>
            <div class="col"><input asp-for="Prenom" type="text" class="form-control" placeholder="Prénom ..." /></div>
            <div class="col"><input asp-for="Id" type="text" class="form-control" placeholder="Vous ne puvez pas modifier Id --reecrivez-le ..." value="@ViewBag.Id_Vendeur" disabled /></div>
            <div class="col"><button type="submit" class="btn btn-success w-100"><i class="bi bi-search"></i>Modifier</button></div>
        </div>
    </div>
</form>

<a href="~/Home/SellerPage" class="btn btn-primary mx-auto w-100" role="button"><i class="bi bi-box-arrow-left"></i> Retour</a>

